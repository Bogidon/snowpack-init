{
  "name": "create-pika-app",
  "version": "0.0.3",
  "description": "Bootstrap a Preact/Pika/Typescript web application without the hassle!",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --write **/*.{js,ts,tsx,json,css,scss,md,yml}",
    "lint": "eslint --ext .js,.jsx src --ignore 'web_modules/**/*.js'",
    "build:pika": "rm -rf pkg && pika build",
    "publish": "pika publish",
    "version": "npx @pika/pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndom91/create-pika-app.git"
  },
  "authors": [
    "Nico Domino <hi@ni.co.de>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndom91/create-pika-app/issues"
  },
  "homepage": "https://github.com/ndom91/create-pika-app#readme",
  "dependencies": {
    "commander": "^3.0.0",
    "envinfo": "^7.3.1",
    "kleur": "^3.0.3",
    "prompts": "^2.2.1",
    "shelljs": "^0.8.3"
  },
  "publishConfig": {
    "registry": "https://npm.ndo.dev"
  },
  "keywords": [
    "preact",
    "pika",
    "toolbox",
    "create-react-app",
    "bootstrapping"
  ],
  "bin": {
    "create-pika-app": "index.js"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.0",
    "@pika/plugin-bundle-node": "^0.6.0",
    "@pika/plugin-copy-assets": "^0.6.0",
    "@pika/plugin-simple-bin": "^0.6.0",
    "@pika/plugin-standard-pkg": "^0.6.0",
    "babel-plugin-import-pika-web": "0.0.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "assets/templates/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-copy-assets"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-bundle-node"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,json,css,scss,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
