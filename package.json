{
  "name": "@pika/init",
  "version": "2.0.1",
  "description": "Bootstrap a Pika + Preact/Vue/Typescript/etc. application without the hassle!",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --write **/*.{js,ts,tsx,json,css,scss,md,yml}",
    "lint": "eslint -c ./.eslintrc.js --ext .js,.jsx src/*",
    "test": "npm run prettier && npm run lint",
    "build": "pika build",
    "publish": "pika publish",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikapkg/init.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "Nico Domino <hi@ni.co.de>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pikapkg/init/issues"
  },
  "homepage": "https://github.com/pikapkg/init#readme",
  "dependencies": {
    "commander": "^3.0.0",
    "inquirer": "^7.0.0",
    "jsonfile": "^5.0.0",
    "kleur": "^3.0.3",
    "ora": "^3.4.0",
    "prompts": "^2.2.1",
    "shelljs": "^0.8.3"
  },
  "keywords": [
    "preact",
    "pika",
    "toolbox",
    "create-react-app",
    "bootstrapping"
  ],
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.1",
    "@pika/plugin-bundle-node": "^0.6.1",
    "@pika/plugin-copy-assets": "^0.6.1",
    "@pika/plugin-simple-bin": "^0.6.1",
    "@pika/plugin-standard-pkg": "^0.6.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "assets/**/*",
            "**/*.json"
          ]
        }
      ],
      [
        "@pika/plugin-copy-assets"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "pika-init"
        }
      ]
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "/src/*.js": [
      "eslint -c ./.eslintrc.js --fix ./src/*",
      "prettier --write",
      "git add"
    ]
  }
}
